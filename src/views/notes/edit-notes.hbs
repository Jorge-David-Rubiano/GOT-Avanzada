<div class="container">
    <div class="col-md-5 mx-auto my-5">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Editar súbdito</h3>
            </div>
            <div class="body">
                <form action="/notes/edit-notes/{{note.id}}?_method=PUT" method="POST">
                    <input type="hidden"  name="_method" value="PUT">
                    <div class="form-group mt-3 ml-3 mr-3">
                        <input type="text" name="nombre" class="form-control" style="width: 100%;" placeholder="Nombre súbdito"
                            value="{{note.nombre}}">
                    </div>

                    <div class="form-group mt-3 ml-3 mr-3">
                        <input type="text" name="n_hijos" class="form-control" style="width: 100%;" placeholder="Número de hijos"
                            value="{{note.n_hijos}}">
                    </div>

                    <div class="form-group mt-3 ml-3 mr-3">
                        <input type="text" name="nombre_hijos" class="form-control" style="width: 100%;" placeholder="Nombre de tus hijos"
                            value="{{note.nombre_hijos}}">
                    </div>

                    <div class="form-group mt-3 ml-3 mr-3">
                        <textarea name="problema" rows="5" style="resize: none;" class="form-control">{{note.problema}}</textarea>
                    </div>

                    <div class="form-group mb-0 pb-0">
                        <button class="btn btn-primary btn-block p-3 mt-4 " type="submit">Guardar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>