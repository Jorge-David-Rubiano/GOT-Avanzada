<div class="container">
    <div class="col-md-5 mx-auto my-5">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Editar soldado</h3>
            </div>
            <div class="body">
                <form action="/soldados/edit-soldados/{{soldado.id}}?_method=PUT" method="POST">
                    <input type="hidden"  name="_method" value="PUT">
                    <div class="form-group mt-3 ml-3 mr-3">
                        <input type="text" name="nombre" class="form-control" style="width: 100%;" placeholder="Nombre soldado"
                            value="{{soldado.nombre}}">
                    </div>

                    <div class="form-group mt-3 ml-3 mr-3">
                        <input type="text" name="especialidad" class="form-control" style="width: 100%;" placeholder="Especialidad del soldado"
                            value="{{soldado.especialidad}}">
                    </div>

                    <div class="form-group mt-3 ml-3 mr-3">
                        <input type="text" name="cargo" class="form-control" style="width: 100%;" placeholder="Cargo del soldado"
                            value="{{soldado.cargo}}">
                    </div>

                    <div class="form-group mt-3 ml-3 mr-3">
                        <input type="text" name="asesinatos" class="form-control" style="width: 100%;" placeholder="Personas asesinadas"
                            value="{{soldado.asesinato}}">
                    </div>

                    <div class="form-group mt-3 ml-3 mr-3">
                        <input type="text" name="interes" class="form-control" style="width: 100%;" placeholder="Â¿EstÃ¡ interesada Daenerys?"
                            value="{{soldado.interes}}">
                    </div>

                    

                    <div class="form-group mb-0 pb-0">
                        <button class="btn btn-primary btn-block p-3 mt-4 " type="submit">Guardar</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>